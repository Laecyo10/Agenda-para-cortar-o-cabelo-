<script>
const horariosBase = [
    "09:00","10:00","11:00",
    "13:00","14:00","15:00",
    "16:00","17:00","18:00"
];

let horarioSelecionado = "";

/* CLIENTE */
function carregarHorarios() {
    const dia = document.getElementById("dia").value;
    const container = document.getElementById("horarios");
    container.innerHTML = "";
    horarioSelecionado = "";

    if (!dia) return;

    const data = new Date(dia + "T00:00:00");
    if (data.getDay() === 0) {
        alert("Domingo nÃ£o atendemos âŒ");
        document.getElementById("dia").value = "";
        return;
    }

    const agendamentos = JSON.parse(localStorage.getItem("agendamentos")) || [];

    horariosBase.forEach(hora => {
        const div = document.createElement("div");
        div.className = "horario";
        div.innerText = hora;

        const ocupado = agendamentos.some(a => a.dia === dia && a.hora === hora);

        if (ocupado) {
            div.classList.add("bloqueado");
        } else {
            div.onclick = () => selecionarHorario(div, hora);
        }

        container.appendChild(div);
    });
}

function selecionarHorario(el, hora) {
    document.querySelectorAll(".horario").forEach(h => h.classList.remove("active"));
    el.classList.add("active");
    horarioSelecionado = hora;
}

function agendar() {
    const nome = document.getElementById("nome").value;
    const servico = document.getElementById("servico").value;
    const dia = document.getElementById("dia").value;

    if (!nome || !dia || !horarioSelecionado) {
        alert("Preencha todos os campos!");
        return;
    }

    const agendamentos = JSON.parse(localStorage.getItem("agendamentos")) || [];

    agendamentos.push({ nome, servico, dia, hora: horarioSelecionado });

    localStorage.setItem("agendamentos", JSON.stringify(agendamentos));

    const telefone = "5599999999999"; // COLOQUE SEU WHATSAPP AQUI

    const msg = `OlÃ¡, me chamo ${nome} e gostaria de agendar:%0A
ServiÃ§o: ${servico}%0A
Dia: ${dia}%0A
HorÃ¡rio: ${horarioSelecionado}`;

    window.open(`https://wa.me/${telefone}?text=${msg}`, "_blank");

    carregarHorarios();
}

/* PAINEL CABELEIREIRO */
function carregarPainel() {
    const lista = document.getElementById("listaAgendamentos");
    lista.innerHTML = "";

    const agendamentos = JSON.parse(localStorage.getItem("agendamentos")) || [];

    agendamentos.forEach((a, i) => {
        const div = document.createElement("div");
        div.className = "card";
        div.innerHTML = `
            <strong>${a.nome}</strong><br>
            ${a.servico}<br>
            ${a.dia} - ${a.hora}
            <button class="btn-cancelar" onclick="cancelar(${i})">Cancelar</button>
        `;
        lista.appendChild(div);
    });
}

function cancelar(index) {
    if (!confirm("Deseja cancelar este horÃ¡rio?")) return;

    const agendamentos = JSON.parse(localStorage.getItem("agendamentos")) || [];
    agendamentos.splice(index, 1);
    localStorage.setItem("agendamentos", JSON.stringify(agendamentos));

    carregarPainel();
    carregarHorarios();
}
</script>

