<div class="container">

<!-- CLIENTE -->
<div class="card">
<h3>ðŸ“… Agendar HorÃ¡rio</h3>

<label>Nome</label>
<input type="text" id="nome">

<label>ServiÃ§o</label>
<select id="servico">
    <option>Corte Masculino</option>
    <option>Corte Feminino</option>
    <option>Barba</option>
    <option>Corte + Barba</option>
</select>

<label>Dia</label>
<input type="date" id="dia" onchange="carregarHorarios()">

<label>HorÃ¡rio</label>
<div class="horarios" id="horarios"></div>

<button onclick="agendar()">Confirmar no WhatsApp</button>
</div>

